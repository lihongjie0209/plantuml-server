{
  "name": "@plantuml-mcp/plantuml-mcp",
  "version": "0.3.2",
  "description": "MCP server for PlantUML diagram generation",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "plantuml-mcp-server": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "test": "npm run build && node dist/test.js",
    "test:enhanced": "npm run build && node dist/test-enhanced.js",
    "test:final": "npm run build && node dist/test-final.js",
    "test:all": "npm run test && npm run test:enhanced",
    "setup": "npm install && npm run build"
  },
  "keywords": [
    "mcp",
    "plantuml",
    "diagram",
    "server"
  ],
  "author": "lihongjie0209",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.4.0",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "axios": "^1.6.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18"
  }
}
